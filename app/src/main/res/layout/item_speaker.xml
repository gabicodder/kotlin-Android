<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardConerRadius"
    android:elevation="4dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <ImageView
            android:id="@+id/ivExpositor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp">
        </ImageView>

        <TextView
            android:id="@+id/tvSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Expositor"
            android:textStyle="bold"
            android:textSize="@dimen/tamanioTitulo"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"            >

        </TextView>

        <TextView
            android:id="@+id/tvSpeakerJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajo Expositor"
            android:textSize="@dimen/tamanioSubtitulo"
            android:textColor="@color/colorAccent"
            android:gravity="center_horizontal">
        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>